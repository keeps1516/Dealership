@model GuildCars.UI.Models.PurchaseViewModel
@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase Vehicle</h2>
    <div class="row col-lg-12 boxed">
        <div class="col-lg-3">
            <strong><p>@Model.Vehicle.Year @Model.Vehicle.Make @Model.Vehicle.ModelName</p></strong>
            <img src="@Model.Vehicle.ImagePath" class="img-responsive" />
        </div>
        <div class="row">
            <div class="col-lg-3">
                <p>Body Style:@Model.Vehicle.BodyStyleName</p>
                <p>Trans:@Model.Vehicle.TransmissionName</p>
                <p>Color:@Model.Vehicle.VehicleColor</p>
            </div>
            <div class="col-lg-3">
                <p>Interior Color:@Model.Vehicle.InteriorColor</p>
                <p>Mileage:@Model.Vehicle.Mileage</p>
                <p>Vin:@Model.Vehicle.Vin</p>
            </div>
            <div class="col-lg-3">
                <p>Sale:@Model.Vehicle.ActualListedPrice</p>
                <p>MSRP:@Model.Vehicle.MSRP</p>
            </div>
        </div>
        <div class="row col-lg-9">
            Description:@Model.Vehicle.Description
        </div>
    </div>
    <div class="row col-lg-7">
        <h2>Sales Information</h2>
        @using (Html.BeginForm("Purchased", "Sales", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m=>m.Vehicle.VehicleId);
            <label>First Name</label>
            @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" });

            <label>Last Name</label>
            @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" });

            <label>Email</label>
            @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" });

            <label>Street 1</label>
            @Html.TextBoxFor(m => m.Customer.Street1, new { @class = "form-control" });

            <label>Street 2</label>
            @Html.TextBoxFor(m => m.Customer.Street2, new { @class = "form-control" });

            <label>City</label>
            @Html.TextBoxFor(m => m.Customer.City, new { @class = "form-control" });

            <label>Zip Code</label>
            @Html.TextBoxFor(m => m.Customer.Zip, new { @class = "form-control" });

            <label>Phone</label>
            @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" });

            <label>Purchase Price</label>
            @Html.TextBoxFor(m => m.Reciept.Total, new { @class = "form-control" });

            <label>Payment Method</label>
            @Html.DropDownListFor(m=>m.Payment.PaymentMethodId, Model.PaymentMethods, new { @class = "form-control" })
            <button class="btn btn-primary">Save</button>
        }
    </div>
     
